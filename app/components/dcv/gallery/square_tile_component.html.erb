<%= content_tag :div, class: tile_classes do -%>
  <picture>
  	<%= tag(:source, srcset: image_url(@image_size), media: "(min-width:768px)") if @downscale %>
  	<img src="<%= image_url(@downscale ? (@image_size / 2) : @image_size) %>" aria-labelledby=<%= labelled_by %>/>
  </picture>
  <%= link_to(item_url, class: link_classes, data: { toggle: 'tooltip', title: caption, customClass: tooltip_class }) do -%>
    <%= content_tag :span, caption, id: labelled_by -%>
  <% end -%>
<% end -%>
