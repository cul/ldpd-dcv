<div class="btn-group btn-group-sm">
  <% if params[:return_to_filesystem].present? %>
    <%= link_to('<i class="fa fa-reply-all"></i>'.html_safe, params[:return_to_filesystem], class: 'btn btn-outline-secondary btn-sm', :"data-toggle" => 'tooltip', "aria-label": t('views.pagination.return_to_filesystem'), title: t('views.pagination.return_to_filesystem')) %>
  <% else %>
    <%= helpers.link_back_to_catalog(label: '<i class="fa fa-reply-all"></i> '.html_safe, class: 'btn btn-outline-secondary btn-sm', :"data-toggle" => 'tooltip', "aria-label": t('views.pagination.return_to_search'), title: t('views.pagination.return_to_search') ) %>
    <% if @search_context[:prev] || @search_context[:next] %>
        <span class="btn btn-outline-secondary btn-sm" style="pointer-events:none;"><%= item_page_entry_info %></span>
        <%= link_to_previous_document @search_context[:prev], "btn btn-outline-secondary btn-sm" %>
        <%= link_to_next_document @search_context[:next], "btn btn-outline-secondary btn-sm" %>
    <% end %>
  <% end %>
</div>
