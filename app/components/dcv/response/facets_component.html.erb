<div class="inner">
  <% facet_group_names.each do |groupname| %>
    <%= render Dcv::Response::FacetGroupComponent.new(
        response: @response,
        hide_heading: @hide_heading,
        id: groupname,
        fields: helpers.facet_field_names(groupname),
        title: groupname.present? ? t("blacklight.search.facets-#{groupname}.title") : t('blacklight.search.facets.title')) %>
  <% end %>
</div>
