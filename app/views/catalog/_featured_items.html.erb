<div id="digital_projects">
	<% all_proj_counter = 0 %>
	<% proj_counter = 0 %>
	<div class="row">
		<% controller.digital_projects.each do |digital_project| %>
			<% if digital_project[:facet_value].present? %>
				<div class="col-sm-3 mb-2">
					<article class="card h-100 bg-transparent" itemscope itemtype="http://schema.org/CreativeWork">
						<div class="card-body">
							<% dcv_search_link = (digital_project[:facet_field].present? && digital_project[:facet_value].present?) ? search_catalog_path(:f => {digital_project[:facet_field] => [digital_project[:facet_value]]}) : nil -%>
							<% digital_project_id_base = digital_project[:id].sub(':', '') -%>
							<%= link_to (dcv_search_link.present? ? dcv_search_link : digital_project[:external_url]), class: 'project-image-link' do %>
								<%= image_tag(digital_project[:image], :class => 'card-img-top img-responsive', :itemprop => 'image', aria: {labelledby: "#{digital_project_id_base}-search"}) -%>
								<%= content_tag(:span, "Browse #{digital_project[:name]} content", class: "sr-only", id: "#{digital_project_id_base}-search") -%>
							<%- end -%>
							<div class=" proj-jav btn-group d-flex" role="group">
								<button class="btn btn-outline-secondary btn-sm" type="button" data-toggle="modal" aria-label="More Information" data-modal-body-delegate="#proj-<%=proj_counter%>" data-modal-title-delegate="#proj-<%= proj_counter %>-title" data-target="#dcvModal"><span class="fa fa-info-circle" aria-hidden="true" title="More Information" data-toggle="tooltip"></span></button>
								<% if digital_project[:external_url].present? %>
									<%= link_to digital_project[:external_url], itemprop: 'url', :"data-toggle" => 'tooltip', :"aria-label" => 'View Collection Site', class: 'btn btn-outline-secondary btn-sm' do -%>
										<%= content_tag :span, "", class: ['fa', 'fa-external-link'], title: 'View Collection Site', data: { toggle: 'tooltip' }  %>
									<%- end -%>
								<% end %>
							</div>
							<div itemprop="name" class="card-title text-center mb-0" id="proj-<%=proj_counter%>-title"><div class="card-title h3 mb-0"><%= digital_project[:name] %></div></div>

							<div id="proj-<%=proj_counter%>" class="hidden">
								<div style="color:black;padding:30px;font-size:110%;" itemprop="description"><%= (digital_project[:description] || '').html_safe %></div>
							</div>
						</div>
					</article>
				</div>
				<%= '<div class="clearfix"></div><br />'.html_safe if (proj_counter += 1) % 4 == 0 %>
			<% end %>
			<% all_proj_counter += 1 %>
		<% end %>
	</div>
</div>
