<%- carousel_image_paths = controller.carousel_image_paths&.shuffle %>
<div id="banner-carousel" class="carousel slide" data-interval="false">
	<!-- Wrapper for slides -->
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="" alt="" src="<%= carousel_image_paths.first %>">
		</div>
		<%- carousel_image_paths[1...-1].each do |image_path| %>
			<div class="carousel-item">
				<img class="" alt="" data-src="<%= image_path %>">
			</div>
		<%- end %>
	</div>
	<button type="button" class="carousel-control-prev icon-only text-primary" data-target="#banner-carousel" data-slide="prev">
		<span class="fa fa-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</button>
	<button type="button" class="carousel-control-next icon-only text-primary" data-target="#banner-carousel"  data-slide="next">
		<span class="fa fa-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</button>
	<ol class="carousel-indicators hidden-xs" style="bottom:0;">
		<li data-target="#banner-carousel" data-slide-to="0" class="active"></li>
		<%- (1...carousel_image_paths.length).each do |image_index| %>
			<li data-target="#banner-carousel" data-slide-to="<%= image_index %>"></li>
		<%- end %>
	</ol>
</div>
