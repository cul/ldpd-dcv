<% if params[:action] == 'home' %>
	<div id="hometn" class="home inner">
		<div id="site-banner">
			<div class="row">
				<div class="col-sm-8">
					<%= render 'site_title' %>
				</div>
				<div class="col-sm-4">
					<div id="search-navbar" class="navbar navbar-default slim" role="navigation">
						<%= render_search_bar(false)  %>
					</div>
				</div>
			</div>
		</div>
		<%= render 'secondary_nav' %>
		<div class="featured-outer">
			<img class="img-responsive" alt="" src="<%= signature_image_path %>">
		</div>
		<%= render 'map_search/home' %>
	</div>
<% else %>
	<header>
		<div id="site-banner">
			<div class="row">
						<div id="site-banner-inner">
								<div class="col-sm-8">
									<%= render 'site_title' %>
								</div>
								<div class="col-sm-4">
									<div id="search-navbar" class="navbar navbar-default slim" role="navigation">
											<%= render_search_bar(false)  %>
									</div>
								</div>
						 </div>
			</div><!--/row-->
		</div>
		<%= render 'secondary_nav' %>
	</header>
<% end %>
