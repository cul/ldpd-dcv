<% if show_sort_and_per_page? and !active_sort_fields.blank? %>
<div id="sort-dropdown" class="btn-group btn-group-sm">
  <%= link_to('<i class="fa fa-sort-alpha-asc"></i> <span class="caret"></span>'.html_safe, "#", :class=>"btn btn-outline-secondary dropdown-toggle", :'data-toggle'=>"dropdown", :"data-tt" => 'tooltip', :title=>t('blacklight.search.sort.label', :field =>current_sort_field.label)) %>

  <ul class="dropdown-menu dropdown-menu-right" role="menu">
      <%- active_sort_fields.each do |sort_key, field_config| %>
        <%- label = (current_sort_field.key == sort_key) ? "#{field_config.label} <i class=\"fa fa-check\"></i>".html_safe : field_config.label -%>
        <li><%= link_to(label, url_for(search_state.params_for_search(:sort => sort_key))) %></li>
      <%- end -%>
  </ul>
</div>
<% end %>
