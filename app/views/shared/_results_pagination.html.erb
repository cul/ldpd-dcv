<% if @response.total_pages > 1 %>
	<div class="results-pagination row record-padding">
		<div class="col-md-9">
			<div>
				<%= paginate @response, :outer_window => 2, :theme => 'dcv' %>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<% if show_other_sources? %>
			<div class="text-right">
				<button class="pagination btn btn-sm btn-link extended-search-mode" type="button">Search Other Sources &raquo;</button>
			</div>
		<% end %>
	</div>
<% else %>
	<% if show_other_sources? %>
		<div class="text-right">
			<button class="pagination btn btn-sm btn-link extended-search-mode" type="button">Search Other Sources &raquo;</button>
		</div>
	<% end %>
<% end %>