<% ix = -1 %>
<div class="inner fs-crumbs well well-sm">
<% breadcrumbs() do |breadcrumb| %>
  <% unless (ix += 1) == 0 %>
    <%="&#187;".html_safe %>
  <% end %>
  <%= link_to(URI.decode_www_form_component(breadcrumb[:label]), url_to_proxy(breadcrumb), class: "fs-directory") %>
<% end %>
<% if params[:proxy_id] && last = params[:proxy_id].split('/').last %>
  <%="&#187;".html_safe %>
  <span class="fs-directory"><%= URI.decode_www_form_component(last) %></span>
<%end%>
</div>
<table class="file-system table table-striped table-bordered">
<thead>
<tr>
 <th data-sort="string" data-title="Name">Name</th>
 <th data-sort="int" data-title="Size">Size</th>
</tr>
</thead>
<% proxies() do |proxy| %>
  <%= proxy_node(proxy) %>
<% end %>
</table>
