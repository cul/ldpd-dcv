<%
child ||= {} # in case legacy code is not passing
logo_path ||= nil
captions_path = bytestream_content_path(catalog_id: child[:id], bytestream_id: 'captions') if child.fetch(:datastreams_ssim, []).include?('captions')
options = { captions_path:  captions_path, logo_path: logo_path }
unless (media_url = wowza_media_token_url(child))
  media_url = bytestream_content_path(catalog_id: child[:pid], bytestream_id: 'access')
  options[:media_type] = 'video/mp4'
end
%>
<%= render_media_element_streaming_player(media_url, nil, **options ) %>
