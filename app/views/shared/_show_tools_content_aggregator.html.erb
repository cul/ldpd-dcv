<div class="btn-group btn-group-sm">
  <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" data-tt="tooltip" title="Citations">
  <i class="fa fa-book"></i> <span class="caret"></span>
  <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul id="item-show-citations" class="dropdown-menu float-right" role="menu">
    <li><%= link_to 'APA Citation', item_citation_path(document['id'], type: 'apa', 'data-label' => 'APA'), :onclick => 'return citationModal(this);' %></li>
    <li><%= link_to 'Chicago Citation', item_citation_path(document['id'], type: 'chicago', 'data-label' => 'Chicago'), :onclick => 'return citationModal(this);' %></li>
    <li><%= link_to 'MLA Citation', item_citation_path(document['id'], type: 'mla', 'data-label' => 'MLA'), :onclick => 'return citationModal(this);' %></li>
  </ul>
</div>
