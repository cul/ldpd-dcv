<% if @subsite&.repository_id -%>
	<% template = "footer/#{@subsite.repository_id}".downcase; template.gsub!("-","") -%>
<% else -%>
	<% template = "footer/nnc" -%>
<% end -%>
<%= render template: template, locals: {} %>
<div class="d-none" id="palette-swatches">
	<p class="swatch-body"></p>
	<p class="swatch-primary"></p>
	<p class="swatch-secondary"></p>
</div>
<div class="modal fade" id="dcvModal" tabindex="-1" role="dialog" aria-labelledby="dcvModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document" id="dcvModalWrapper">
		<div class="modal-content">
			<div class="modal-header">
				<div class="modal-title h5" id="dcvModalLabel"></div>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<i class="fa fa-times" aria-hidden="true"></i>
				</button>
			</div>
			<div class="modal-body" id="dcvModalBody">
			</div>
		</div>
	</div>
</div>