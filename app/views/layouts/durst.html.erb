<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
		<%= render partial: 'shared/head_includes' %>
		<%= stylesheet_link_tag 'dcv-legacy', :media => 'all'  %>
		<%= stylesheet_link_tag subsite_layout, :media => 'all'  %>
		<%= javascript_include_tag subsite_layout %>

		<script>
			window.CULh_feedback_url = 'https://feedback.cul.columbia.edu/feedback_submission/durst';
		</script>

  </head>
  <body class="<%= render_body_class %> <%= render_subsite_body_classes %> <%= params[:action] %>" style="padding-top: 50px;">

  <%= render :partial => 'shared/topnavbar' %>

  <div id="outer-wrapper" class="container">
		<div class="row">

		<%#= render partial: 'shared/header_navbar' %>
		<div class="container">
			<div id="site-banner" class="slim" style="margin-bottom:0;">
				<div class="row">
				 <div id="site-banner-inner">
					<div class="col-sm-6">
					 <%= link_to '<span class="hidden-sm">Seymour B. </span>Durst <span class="break-phone">Old York Library</span>'.html_safe, root_path+'durst', { :id => 'site-title' } %>
                     <div id="site-banner-subtitle" class="trajanpro">Avery Architectural &amp; Fine Arts Library</div>
					</div>
					<div class="col-sm-6">
						<div id="search-navbar" class="navbar navbar-light slim" role="navigation">
							<%= render_search_bar(false)  %>
						</div>
					</div>
				 </div>
				</div><!--/row-->
			</div>
			<div id="secondary-nav">
				 <div class="subnav">
					<div class="row">
						<div class="col-sm-8">
						<ul class="nav nav-pills float-left" style="font-size: 11px;">
							<li class="hidden-phone"><a href="<%=root_path+'durst'%>" class="opacity_50" style="
								line-height: 0;
								margin-top: -6px;
								padding-right: 22px;"><i class="fa fa-home"></i></a>
							</li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle hidden-xs" data-toggle="dropdown">HELP <b class="caret"></b></a>
								<a href="#" title="Help" class="dropdown-toggle visible-xs opacity_50" style="
									line-height: 0;
									margin-top: -6px;
									padding-right: 22px;
									padding-left: 22px;"
									data-toggle="dropdown"><i class="fa fa-question-circle"></i><b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><a href="<%= durst_help_path %>">Search Tips</a></li>
									<li><a href="<%= durst_help_path %>#glossary">Glossary</a></li>
									<li><a href="#" onclick="return DCV.FeedbackModal.show();">Suggestions and Feedback</a></li>
								</ul>
							</li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle hidden-xs" data-toggle="dropdown">LEARN MORE <b class="caret"></b></a>
								<a href="#" class="dropdown-toggle visible-xs opacity_50" style="
									line-height: 0;
									margin-top: -6px;
									padding-right: 22px;
									padding-left: 22px;"
									data-toggle="dropdown"><i class="fa fa-info-circle"></i><b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><a href="<%= durst_about_the_collection_path %>">About the collection</a></li>
									<li><a href="<%= durst_about_the_project_path %>">About the project</a></li>
									<li><a href="<%= durst_acknowledgements_path %>">Acknowledgements</a></li>
								</ul>
                            </li>
                        </ul>
						</div><!--/-->
									<div id="navbar_right_wrapper" class="col-sm-3 float-right" style="
									font-size: 12px;
									text-align: right;
								">
									<ul class="nav nav-pills float-right nav-collapse" id="user_util_links">
										<li class="inline">
										<a href="<%= durst_map_search_path %>" id="durst-search-home" title="Map Search" style="line-height: 0; margin-top: -7px;"><span class="fa fa-map-marker"></span></a>
										</li>
										<li class="inline">
										<a href="<%= durst_image_search_url %>" id="durst-image-search" title="Perform an Image Search" style="line-height: 0; margin-top: -7px;"><span class="fa fa-picture-o"></span></a>
										</li>
										<li class="inline">
										<a href="<%= local_facet_search_url('lib_format_sim', 'books') %>" id="durst-book-search" title="Perform a Book Search" style="line-height: 0; margin-top: -7px;"><span class="fa fa-book"></span></a>
										</li>
									</ul>
									</div>
							</div><!--/row-->
						 </div><!--/subnav-->
					</div>
				</div>

				<%= render partial: 'shared/modal' %>

				<div id="main-container" class="container">
				<%= render :partial=>'shared/flash_msg', layout: 'shared/flash_messages' %>
				<%= render partial: 'shared/alert' %>

				<%= yield %>

				</div>

				<%= render :partial => 'footer' %>

		</div><!--/.row-->
	</div><!--/#outer-wrapper-->

	<%= render :partial => 'shared/footer_includes' %>

  </body>
</html>
