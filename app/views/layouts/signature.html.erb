<!DOCTYPE html>
<html lang="en" class="no-js">
	<head>
		<%= render partial: 'shared/head_includes' %>
		<%- Array(subsite_styles).each do |subsite_style| -%>
			<%= stylesheet_link_tag subsite_style %>
		<%- end -%>
		<style type="text/css">
			#hometn .featured-outer {
				<%- if signature_banner_image_path.include? @subsite.slug -%>
					background-image: url("<%= signature_banner_image_path %>");
				<%- else -%>
					background-color: var(--signature-banner-tint);
					background-image: url("<%= signature_banner_image_path %>");
					background-blend-mode: luminosity;
				<%- end -%>
			}
		</style>
		<%= javascript_include_tag subsite_layout %>
		<script>
			window.CULh_feedback_url = 'https://feedback.cul.columbia.edu/feedback_submission/dlc';
		</script>
	</head>
	<body class="<%= render_body_class %> dcv <%= render_subsite_body_classes %> <%= params[:action] %>" style="padding-top: 50px;">

	<%= render :partial => 'shared/topnavbar' %>

	<div id="outer-wrapper" class="container">
		<div class="row">
			<%= render partial: 'header_navbar' %>

			<%= render partial: 'shared/modal' %>

			<div id="main-container" class="container">
				<%= render :partial=>'shared/flash_msg', layout: 'shared/flash_messages' %>
				<%= render partial: 'shared/alert' %>
				<%= yield %>
			</div>
		</div><!--/.row-->
		<%= render :partial => 'footer' %>
	</div><!--/#outer-wrapper-->

	</body>
</html>
