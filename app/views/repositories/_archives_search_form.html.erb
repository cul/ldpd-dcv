<%= form_tag 'https://findingaids.library.columbia.edu/archives', :method => :get, :class => ['clearfix', 'flex-fill'] do %>
  <div class="input-group">
    <label for="archives_q" class="sr-only"><%= t('blacklight.search.form.q') %></label>
    <%= text_field_tag :q, params[:q], :placeholder => (!query_has_constraints? ?  t(:"dlc.search_placeholder.new.archives", default: :'dlc.search_placeholder.new.default').html_safe : t(:"dlc.search_placeholder.modified.#{controller.controller_name}", default: :'dlc.search_placeholder.modifed.default').html_safe), :class => "search_q q form-control", :id => "archives_q" %>
    <input type="hidden" name="f[repository][]" value="<%= t("cul.archives.arclight_slug.#{params[:repository_id].downcase.sub('-','')}") %>" />
    <input type="hidden" name="group" value="true" />
    <div class="input-group-append">
      <button class="btn btn-primary search-btn" type="submit" aria-label="Submit">
        <span class="fa fa-search"></span>
      </button>
    </div>
  </div>
<% end %>
