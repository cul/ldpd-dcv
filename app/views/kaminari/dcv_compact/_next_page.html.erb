<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% tag_class="btn btn-default #{'disabled' if current_page.last?}" -%>
<%= link_to '<i class="glyphicon glyphicon-arrow-right"></i>'.html_safe, url, :rel => 'next', :remote => remote, title: raw(t 'views.pagination.next'), class: tag_class %>
