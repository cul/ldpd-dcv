<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% tag_class = "page-item btn bg-body btn-outline-info rounded-0 align-content-center#{' active' if page.current? }" -%>
 <%= link_to number_with_delimiter(page.to_s), url, {class: tag_class, remote: remote, rel: (page.next? ? 'next' : page.prev? ? 'prev' : nil)} %>
