<div class="row">
  <div id="nav" class="col-md-12">
    <div id="sortAndPerPage" style="border-bottom:0; margin-bottom:0;">
      <div id="browse-lists" class="page_links btn-group btn-group-sm">
        <a class="btn btn-secondary" href="/browse/projects">Projects</a>
        <a class="btn btn-secondary" href="/browse/formats">Formats</a>
        <a class="btn btn-secondary" href="/browse/names">Names</a>
        <a class="btn btn-secondary btn-success <%= (params[:action] == 'libraries') ? 'active' : params[:action] -%>" href="#">Library Locations</a>
      </div>
    </div>
  </div>

  <div id="content" class="col-md-12">
    <% facet_name = 'lib_repo_long_sim' -%>
    <% data = @browse_lists[facet_name] -%>
    <div class="inner" id="tab_<%= facet_name %>">
      <small><%= data['short_description'] %></small>
      <br /><br />
      <ul class="nopad-rl cols-two">
        <% long_repo_names_to_short_repo_names = get_long_repo_names_to_short_repo_names() %>
        <% data['value_pairs'].each do |value, count| %>
          <% facet_value = long_repo_names_to_short_repo_names[value] %>
          <% facet_value ||= value %>
          <% search_link = search_action_path(:f => {'lib_repo_short_ssim' => [facet_value]}) %>
          <li><%= link_to value, search_link %> (<%= count %>)</li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
